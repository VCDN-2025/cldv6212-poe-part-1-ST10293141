@model List<ABCRETAIL.Models.Order>

@{
    ViewData["Title"] = "Contracts & Orders";
    var files = ViewBag.Files as IEnumerable<string>;
}

<div class="container mt-4" style="max-width: 900px;">
    <h2 class="text-center mb-4">Order Logs</h2>

    @if (files != null && files.Any())
    {
        <ul class="list-group mb-4">
            @foreach (var name in files)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @name
                    <a class="btn btn-sm btn-outline-primary" asp-action="Download" asp-route-name="@name">Download</a>
                </li>
            }
        </ul>
    }
    else
    {
        
    }

    <hr />

    <h2 class="text-center mb-3">Place an Order</h2>

    <!-- Order Form -->
    <form asp-action="PlaceOrder" method="post" class="row g-3 border rounded p-4 shadow-sm mb-5">
        <div class="col-md-6">
            <label class="form-label">Item Name</label>
            <input type="text" name="Name" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label class="form-label">Item Color</label>
            <input type="text" name="Color" class="form-control" required />
        </div>
        <div class="col-12">
            <label class="form-label">Item Description</label>
            <textarea name="Description" class="form-control" rows="3" required></textarea>
        </div>
        <div class="col-md-6">
            <label class="form-label">Price Range</label>
            <input type="text" name="PriceRange" class="form-control" required />
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary w-100">Submit Order</button>
        </div>
    </form>

    <!-- Order Table -->
    @if (Model != null && Model.Any())
    {
        <h3 class="text-center mb-3">Submitted Orders</h3>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Color</th>
                    <th>Price Range</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var order = Model[i];
                    <tr>
                        <td>@order.Name</td>
                        <td>@order.Description</td>
                        <td>@order.Color</td>
                        <td>@order.PriceRange</td>
                        <td>
                            <form asp-action="DeleteOrder" method="post" style="display:inline;">
                                <input type="hidden" name="index" value="@i" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
